{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithEdge",
        "args": [
          "--remote-debugging-port=9222",
          "--user-data-dir=/tmp/edge-dev-profile",
          " --profile-directory=Default"
        ]
      }
    }
  ]
}
